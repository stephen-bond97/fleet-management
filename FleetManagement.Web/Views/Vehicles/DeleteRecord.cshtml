@model MOTRecord

<h3 class="mt-4 mb-4">Delete MOT Record</h3>

<h4 class="mb-4">Are you sure you want to delete this Record?</h4>

<div>
    <div class="col card rounded shadow p-3">
        <dl class="row">       
            <dt class="col-5">Date</dt>
            <dd class="col-7">@Model.Date.ToLocalTime().ToShortDateString()</dd>

            <dt class="col-5">Outcome</dt>
            <dd class="col-7">@Model.Outcome</dd>
            
            <dt class="col-5">Mileage</dt>
            <dd class="col-7">@Model.Mileage</dd>

            <dt class="col-5">Report</dt>
            <dd class="col-7">@Model.Report</dd>

            <dt class="col-5">Engineer Name</dt>
            <dd class="col-7">@Model.EngineerName</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteMOTConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Vehicles" asp-action="List" >Cancel</a>
        </form>
    </div>
    
</div>