@model MOTResult

<div class="card rounded shadow p-3">
    <form asp-action="EditMOTRecord">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control"/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Outcome" class="form-label"></label>      
            <select asp-for="Outcome" class="form-control" 
                asp-items="Html.GetEnumSelectList<VehicleTestOutcome>()"))">
            </select>
            <span asp-validation-for="Outcome" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Mileage" class="form-label"></label>
            <input asp-for="Mileage" class="form-control"/>
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Report" class="form-label"></label>
            <input asp-for="Report" class="form-control"/>
            <span asp-validation-for="Report" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="EngineerName" class="form-label"></label>
            <input asp-for="EngineerName" class="form-control"/>
            <span asp-validation-for="EngineerName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Update" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-controller="Vehicles" asp-action="List">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
