@model User

<h3 class="mt-4 mb-4">Delete User</h3>

<h4 class="mb-4">Are you sure you want to delete this User?</h4>

<div>
    <div class="col card rounded shadow p-3">
        <dl class="row">       
            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Email</dt>
            <dd class="col-7">@Model.Email</dd>
            
            <dt class="col-5">Role</dt>
            <dd class="col-7">@Model.Role</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Users" asp-action="UserList" >Cancel</a>
        </form>
    </div>
    
</div>