@model User

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Email</dt>
            <dd class="col-7">@Model.Email</dd>

            <dt class="col-5">Role</dt>
            <dd class="col-7">@Model.Role</dd>
        </dl>

        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Users" asp-action="UpdateUser" asp-route-id="@Model.Id">Update</a>
            <a class="btn btn-danger" asp-controller="Users" asp-action="DeleteUser" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>